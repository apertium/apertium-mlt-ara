<?xml version="1.0" encoding="UTF-8"?>
<modes>
  <mode name="mt-ar" install="yes">
    <pipeline>
      <program name="lt-proc">
        <file name="mt-ar.automorf.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="mt-ar.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="apertium-transfer">
        <file name="apertium-mt-ar.mt-ar.t1x"/>
        <file name="mt-ar.t1x.bin"/>
        <file name="mt-ar.autobil.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="mt-ar.autogen.bin"/>
      </program>
    </pipeline>
  </mode>
  
  <mode name="mt-ar-morph" install="no">
    <pipeline>
      <program name="lt-proc -w">
        <file name="mt-ar.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="mt-ar-tagger" install="no">
    <pipeline>
      <program name="lt-proc">
        <file name="mt-ar.automorf.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="mt-ar.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
    </pipeline>
  </mode>

  <mode name="mt-ar-bidix" install="no">
    <pipeline>
      <program name="lt-proc">
        <file name="mt-ar.automorf.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="mt-ar.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="mt-ar.autobil.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="mt-ar-transfer" install="no">
    <pipeline>
      <program name="lt-proc">
        <file name="mt-ar.automorf.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="mt-ar.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="apertium-transfer">
        <file name="apertium-mt-ar.mt-ar.t1x"/>
        <file name="mt-ar.t1x.bin"/>
        <file name="mt-ar.autobil.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="mt-ar-dgen" install="no">
    <pipeline>
      <program name="lt-proc">
        <file name="mt-ar.automorf.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="mt-ar.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="apertium-transfer">
        <file name="apertium-mt-ar.mt-ar.t1x"/>
        <file name="mt-ar.t1x.bin"/>
        <file name="mt-ar.autobil.bin"/>
      </program>
      <program name="lt-proc -d">
        <file name="mt-ar.autogen.bin"/>
      </program>
    </pipeline>
  </mode>
</modes>
